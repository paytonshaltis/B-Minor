// testing printf and other functions from the C standard library (be sure to link library.s!)


// declare the prototypes of the functions we want to use
printf : function integer(format : string, arg1 : integer, arg2 : string);
atoi : function integer(arg1 : string);

main : function integer (argc : integer, argv : array [] string) = {

    // try using the printf function
    num : integer = -374;
    name : string = "Payton Shaltis";
    printf("My number is %i, and my name is %s!\n", num, name);

    // try using the atoi function
    myString : string = "157"; 
    print "Using the \'atio()\' function, string ", myString, " converts to ", atoi(myString), "\n";
    return 0;
}