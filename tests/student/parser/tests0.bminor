// general test file, includes global variables, function declaration,
// function definition, main function, function call, print, return, loops,
// if/else statements, boolean logic, and comments.


/* global variables declared or initialized with constant */
g_int : integer;
g_string : string = "Hello World!";
g_array : array[3] integer = {3, 7, 19};

/* function declaration, defined below 'main' */
overlyComplexTest : function boolean (var : boolean);

/* main function */
main : function integer (argc : integer, argv : array[] string) = {
    i : integer;
    for(i = 0; i < 10; i++)
        print "Hello ", i, "\n";


    isComplex : boolean;
    isComplex = true;
    if(overlyComplexTest(!(!isComplex)) == true) {
        print "This is overly complex.\n";
    }
    else {
        print "This is NOT overly complex.\n";
    }
    return 0;
}

/* definition of the overlyComplexTest function */
overlyComplexTest : function boolean (var : boolean) = {
    if(var == true) {
        return true;
    }
    return false;
}